<%= partial("command") %>

<h1>Register New Plugin</h1>

<%= error_messages_for @plugin %>

<%= form_for @plugin, :action => resource(:plugins) do %>
<dl>
  <dt>
    <%= label 'Name', :for => :name %>
  </dt>
  <dd>
    <%= text_field :name %>
  </dd>
  <dt>
    <%= label 'Home Page', :for => :home %>
  </dt>
  <dd>
    <%= text_field :home %>
  </dd>
  <dt>
    <%= label 'description', :for => :description %>
  </dt>
  <dd>
    <%= text_area :description %>
  </dd>
  <% if session.user.admin? %>
    <dt>
      <%= label "Repository", :for => :repos %>
      Ex) git://github.com/{user id}/{project name}.git
    </dt>
    <dd>
      <%= text_field :repos %>
    </dd>
  <% end %>
  <dt>
    Ready to register?
  </dt>
  <dd>
    <%= submit 'Register Plugin' %>
  </dd>
</dl>
<% end =%>
