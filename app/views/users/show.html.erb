<% if session.user == @user || (session.user && session.user.admin?) %>
  <%= partial :command %>
<% end %>

<h1>
  About
  <%= @user.login %>
</h1>

<%= gravater @user.email %>

<dl>
  <dt>Activated at</dt>
  <dd>  
    <%= @user.activated_at %>
  </dd>
  <% if @user.home.present? %>
    <dt>Homepage</dt>
    <dd>  
      <%= link_to h(@user.home), @user.home %>
    </dd>
  <% end %>
  <dt>Registered Plugins</dt>
  <dd>
    <%= @user.plugins.count %>
  </dd>
  <% if session.user && session.user.admin? %>
    <dt>Admin?</dt>
    <dd>
      <%= @user.admin %>
    </dd>
  <% end %>
</dl>
