<h1>Users controller, new action</h1>

<%= error_messages_for @user %>

<%= form_for @user, :action => resource(:users) do %>
<dl>
  <dt>
    <%= label 'Login ID', :for => :login %>
  </dt>
  <dd>
    <%= text_field :login %>
  </dd>
  <dt>
    <%= label 'Email Address', :for => :email %>
  </dt>
  <dd>
    <%= text_field :email %>
  </dd>
  <dt>
    <%= label 'Password', :for => :password %>
  </dt>
  <dd>
    <%= password_field :password %>
  </dd>
  <dt>
    <%= label 'Password Confirmation', :for => :password_confirmation %>
  </dt>
  <dd>
    <%= password_field :password_confirmation %>
  </dd>
  <dt>
    Ready to create?
  </dt>
  <dd>
    <%= submit 'Create Account' %>
  </dd>
</dl>
<% end =%>
